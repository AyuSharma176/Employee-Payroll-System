<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Payroll System</title>
    <link rel="icon" href="/icons/logo.svg" type="image/svg+xml">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <div class="heading"> <h1 class="heading">Employee Payroll Dashboard</h1></div> 
        <div class="header-actions">
            <button class="btn-add" onclick="window.location.href='/add'">Add Employee</button>
        </div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Department</th>
                    <th>Basic Salary</th>
                    <th>Tax (12%)</th>
                    <th>Net Salary</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(employee => { %>
                    <% const tax = employee.salary * 0.12; %>
                    <% const netSalary = employee.salary - tax; %>
                    <% const deptDisplay = Array.isArray(employee.department) ? employee.department.join(', ') : employee.department; %>
                    <tr>
                        <td><%= employee.id %></td>
                        <td><%= employee.name %></td>
                        <td><%= employee.position %></td>
                        <td><%= deptDisplay %></td>
                        <td>₹<%= employee.salary.toFixed(2) %></td>
                        <td>₹<%= tax.toFixed(2) %></td>
                        <td>₹<%= netSalary.toFixed(2) %></td>
                        <td class="btn-main">
                            <button class="btn-edit" onclick="window.location.href='/edit/<%= employee.id %>'"><img src="/icons/edit.svg" ></button>
                            <button class="btn-delete" onclick="deleteEmployee('<%= employee.id %>')"><img src="/icons/delete.svg" ></button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script>
        function deleteEmployee(id) {
            if (confirm('Are you sure you want to delete this employee?')) {
                fetch(`/delete/${id}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                    window.location.reload();
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to delete employee');
                });
            }
        }
    </script>
</body>
</html>